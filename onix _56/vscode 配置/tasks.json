{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-m32",
                // "-I${workspaceFolder}/src/include", //这个{workspaceFolder}是指vscode中"打开文件夹"的那个文件夹
                "-I/home/qwas/onix/src/include",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Generated task for building the active file"
        },


        {
            "type": "shell",
            "label": "nasm: gcc 生成活动文件",
            "command": "",
            "args": [
                "/usr/bin/nasm",
                "-f",
                "elf32",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                ";",
                
                "/usr/bin/gcc",
                "-fdiagnostics-color=always",
                "-g",
                "-m32",
                "-static",
                // "-I${workspaceFolder}/src/include", //这个{workspaceFolder}是指vscode中"打开文件夹"的那个文件夹
                "-I/home/qwas/onix/src/include",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Generated task for building the active file"
        }



    ]
}